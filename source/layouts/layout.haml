/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0, user-scalable=no",  :name => "viewport"}
    %title= data.page.title || "TLC | Promotion Page"
    / Included CSS Files
    = stylesheet_link_tag "app", "ss-standard", "http://fonts.googleapis.com/css?family=Libre+Baskerville:400,400italic", "http://fonts.googleapis.com/css?family=PT+Sans:400,700", "http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700"
    = javascript_include_tag "foundation/modernizr.foundation", "modernizr.custom.14613.js"
    
  %body
    = yield
    / Application Javascript, safe to override
    = javascript_include_tag "app"